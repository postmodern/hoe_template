require 'rubygems'
require 'hoe'
require 'hoe/signing'
require './tasks/yard.rb'

Hoe.spec('<%= project %>') do
  self.developer('<%= XIF %>', '<%= XIF %>@server.com')

  self.readme_file = 'README.rdoc'
  self.history_file = 'History.rdoc'

  self.rspec_options += ['--colour', '--format', 'specdoc']

  self.extra_dev_deps = [
    ['rspec', '>=1.2.9'],
    ['yard', '>=0.5.2']
  ]

  self.spec_extras = {:has_rdoc => 'yard'}
end

